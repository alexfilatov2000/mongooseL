extends layout

block content
    h1= title

    form(method="POST", action="/articles/add")
        .form-group
            label Title:
            input.form-control(type="text", name="title")
        .form-group
            label Author:
            input.form-control(type="text", name="author")
        .form-group
            label Body:
            input.form-control(type="text", name="body")

        input.btn-primary(type="submit", value="Submit")

