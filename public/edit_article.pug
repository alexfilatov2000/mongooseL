extends layout

block content
    h1= title

    form(method="POST", action="/articles/edit/"+article._id)
        label Title:
        input(type="text", name="title", value=article.title)
        br

        label Author:
        input(type="text", name="author", value=article.author)
        br

        label Body:
        input(type="text", name="body", value=article.body)
        br

        input(type="submit", value="Change")
